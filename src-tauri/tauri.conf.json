{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Whisper Dictation",
  "version": "0.1.0",
  "identifier": "com.whisper-dictation.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Whisper Dictation",
        "width": 400,
        "height": 300,
        "resizable": false,
        "center": true,
        "visible": false
      },
      {
        "label": "overlay",
        "title": "Overlay",
        "url": "index.html",
        "width": 300,
        "height": 300,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true,
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": ["ffmpeg", "python3", "python3-pip"]
      }
    }
  },
  "plugins": {
    "globalShortcut": {
      "shortcuts": []
    }
  }
}
